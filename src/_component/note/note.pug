.note
  input.note-toggle-checkbox(type="checkbox", id="note-toggle")
  lable.note-label(for="note-toggle")
    span.note-label-yes Show note
    span.note-label-no Hide note
  .note-wrapper
    .note-intro Your screen is on landscape mode
    .note-header To view the website at it's best:
    ul.note-list
      li.note-item rotate your device in portrait
      li.note-item resize your device in portrait
      li.note-item ignore all the above and hide this message
