doctype html
html
  head
    meta(charset="utf8")
    title #{data.curriculum.page.pageTitle}
    meta(name="description", content=data.curriculum.page.pageDescription)
    meta(name="viewport", content="width=device-width, initial-scale=1.0, user-scalable=no")
    //- style.scss will be compiled into style.css
    //- so we make use of it below
    if config.entry.css.external
      link(rel="stylesheet", href="style.css")
    if config.entry.css.inline
      link(rel="stylesheet", href=`${inlinePath}`, inline)
  body
    .container
      block content
